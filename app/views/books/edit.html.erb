<div class="row">
  <div class="col-md-8 col-md-offset-2">

<h2>Editing Book</h2>

<%= form_for @book do |f| %>


    <div class="form-group">
      <%= f.label :title %><br>
      <%= f.text_field :title, autofocus: true ,class:"form-control book_title"%>
    </div>

    <div class="form-group">
      <%= f.label :opinion %><br />
      <%= f.text_area :opinion, autofocus: true ,class:"form-control book_body"%>
    </div>



    <div class="actions">
    <%= f.submit "Update book", class:"btn btn-primary" %>
    </div>
<% end %>


</div>
</div>
